
  <title>Admin Dashboard</title>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
  <div class="container mt-4">
    <h1><i class="fas fa-user-shield"></i> Welcome, Admin <%= user.fullname %></h1>

    <section class="mb-4">
      <h2><i class="fas fa-clipboard-list"></i> Admin Logs</h2>
      <table class="table table-bordered table-striped">
        <thead>
          <tr><th>ID</th><th>Action</th><th>Performed By</th><th>Timestamp</th></tr>
        </thead>
        <tbody>
          <% adminLogs.forEach(log => { %>
            <tr>
              <td><%= log.id %></td>
              <td><%= log.action %></td>
              <td><%= log.performedBy %></td>
              <td><%= new Date(log.timestamp).toLocaleString() %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </section>

    <section class="mb-4">
      <h2><i class="fas fa-bell"></i> Notifications</h2>
      <ul class="list-group">
        <% notifications.forEach(note => { %>
          <li class="list-group-item"><%= note.message %> (<%= new Date(note.created_at).toLocaleDateString() %>)</li>
        <% }) %>
      </ul>
    </section>

    <section class="mb-4">
      <h2><i class="fas fa-award"></i> Badges</h2>
      <ul class="list-unstyled">
        <% badges.forEach(badge => { %>
          <li class="mb-2">
            <img src="<%= badge.icon_url %>" alt="<%= badge.name %>" width="24" height="24" class="me-2" />
            <strong><%= badge.name %></strong>: <%= badge.description %>
          </li>
        <% }) %>
      </ul>
    </section>

    <section class="mb-4">
      <h2><i class="fas fa-robot"></i> Bots</h2>
      <ul>
        <% bots.forEach(bot => { %>
          <li><%= bot.bot_name %> - <%= bot.bot_description %> (<%= bot.is_active ? 'Active' : 'Inactive' %>)</li>
        <% }) %>
      </ul>
    </section>

    <section class="mb-4">
      <h2><i class="fas fa-users"></i> Chat Groups</h2>
      <ul>
        <% chatGroups.forEach(group => { %>
          <li><strong><%= group.group_name %></strong>: <%= group.description %> (Created by user ID <%= group.created_by %>)</li>
        <% }) %>
      </ul>
    </section>

    <section class="mb-4">
      <h2><i class="fas fa-clipboard-check"></i> Super Logs</h2>
      <ul>
        <% superLogs.forEach(log => { %>
          <li><%= new Date(log.timestamp).toLocaleString() %> - Role: <%= log.role %> - Action: <%= log.action %></li>
        <% }) %>
      </ul>
    </section>

    <p><a href="/auth/logout" class="btn btn-danger"><i class="fas fa-sign-out-alt"></i> Logout</a></p>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
