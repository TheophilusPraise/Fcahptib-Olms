<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Certificates</title>
  <link rel="stylesheet" href="/css/certificates.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
</head>
<body>
  <section class="certificate-section">
    <h1><i class="fas fa-certificate"></i> Certificates</h1>
    <% if (certificates.length === 0) { %>
      <p class="no-cert">You have no certificates yet.</p>
    <% } else { %>
      <ul class="cert-list">
        <% certificates.forEach(cert => { %>
          <li>
            <div class="cert-icon"><i class="fas fa-award"></i></div>
            <div class="cert-info">
              <span class="cert-title"><%= cert.title %></span>
              <span class="cert-date">Issued on <%= new Date(cert.issued_at).toLocaleDateString() %></span>
            </div>
          </li>
        <% }) %>
      </ul>
    <% } %>
    <a class="back-link" href="/dashboard/student"><i class="fas fa-arrow-left"></i> Back to Dashboard</a>
  </section>
</body>
</html>
