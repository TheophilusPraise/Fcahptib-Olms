<section class="reset-password-section">
  <h2>Reset Password</h2>

  <% if (error && error.length > 0) { %>
    <div class="alert" role="alert">
      <ul>
        <% error.forEach(function(err) { %>
          <li><%= err %></li>
        <% }); %>
      </ul>
    </div>
  <% } %>

  <% if (message && message.length > 0) { %>
    <div class="alert" role="alert">
      <% message.forEach(function(msg) { %>
        <p><%- msg %></p>  <!-- Render HTML safely for clickable links -->
      <% }); %>
    </div>
  <% } %>

  <form action="/auth/reset-password" method="POST" autocomplete="off" novalidate>
    <div class="form-group">
      <input
        type="email"
        id="email"
        name="email"
        placeholder=" "
        required
        value="<%= typeof email !== 'undefined' ? email : '' %>"
        aria-describedby="emailHelp"
      />
      <label for="email">Enter your registered email</label>
      <small id="emailHelp" class="form-text text-muted">We'll send a password reset link to this email.</small>
    </div>

    <button type="submit" class="btn-primary">
      <i class="fas fa-envelope"></i> Send Reset Link
    </button>
  </form>

  <p><a href="/auth/login">Back to Login</a></p>
</section>
