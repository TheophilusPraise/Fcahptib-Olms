            <li><a href="/lecturer/assignments">Assignments</a></li>
            <li><a href="/lecturer/messages">Messages</a></li>
            <li><a href="/lecturer/resources">Resources</a></li>
          <% } else if (user.role === 'student') { %>
            <li><a href="/student/courses">My Courses</a></li>
            <li><a href="/student/assignments">Assignments</a></li>
            <li><a href="/student/messages">Messages</a></li>
            <li><a href="/student/certificates">Certificates</a></li>
          <% } %>
          <li><a href="/profile">Profile</a></li>
          <li><a href="/auth/logout">Logout</a></li>
        <% } else { %>
          <li><a href="/">Home</a></li>
          <li><a href="/auth/login">Login</a></li>
          <li><a href="/auth/register">Register</a></li>
        <% } %>
      </ul>
    </div>

    <!-- Resources -->
    <div class="footer-column">
      <h4>Resources</h4>
      <ul>
        <li><a href="/help">Help Center</a></li>
        <li><a href="/privacy">Privacy Policy</a></li>
