    <!-- Quick Links: Dynamic by Role -->
    <div class="footer-column">
      <h4>Quick Links</h4>
      <ul>
        <% if (user) { %>
          <% if (user.role === 'admin') { %>
            <li><a href="/admin/dashboard">Admin Dashboard</a></li>
